{
    "name": "gfx",
    "authors": [
        "Rémi Thebault"
    ],
    "description": "D graphics rendering library",
    "copyright": "Copyright © 2016, Rémi Thebault",
    "license": "MIT",

    "subPackages": [
        "examples/swapchain"
    ],
    "-ddoxFilterArgs": ["--min-protection=Protected", "--ex=erupted"],

    "dependencies": {
        "erupted": {
            "path": "3rdparty/Erupted"
        }
    },
    "configurations": [
        {
            "name": "wayland",
            "platforms": ["linux"],
            "versions": [ "GfxVulkanWayland" ],
            "dependencies": {
                "wayland:client": "~>0.1.0"
            },
            "subConfigurations": {
                "erupted": "dub-platform-wayland-derelict-loader"
            },
            "preGenerateCommands": [
                "dub run wayland:scanner -- -m gfx.window.wayland.zxdg_shell_v6 -i $PACKAGE_DIR/resources/xdg-shell-unstable-v6.xml -o $PACKAGE_DIR/source/gfx/window/wayland/zxdg_shell_v6.d"
            ]
        },
        {
            "name": "xcb",
            "platforms": ["linux"],
            "versions": [ "GfxVulkanXcb" ],
            "dependencies": {
                "xcb-d": "~>2.1.0"
            },
            "subConfigurations": {
                "erupted": "dub-platform-xcb-derelict-loader"
            }
        },
        {
            "name": "windows",
            "platforms": ["windows"],
            "versions": [
                "GfxVulkanWin32",
                "VK_USE_PLATFORM_WIN32_KHR"
            ],
            "subConfigurations": {
                "erupted": "with-derelict-loader"
            }
        },
        {
            "name": "offscreen",
            "versions": ["GfxOffscreen"],
            "subConfigurations": {
                "erupted": "with-derelict-loader"
            }
        }
    ]
}
